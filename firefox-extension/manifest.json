{
  "manifest_version": 2,
  "name": "hCaptcha/reCaptcha Auto-Solver",
  "version": "1.0.0",
  "description": "Automatisches LÃ¶sen von hCaptcha und reCaptcha mit AI-Integration",
  
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Captcha Auto-Solver",
    "default_popup": "popup.html"
  },
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "web_accessible_resources": [
    "injected.js"
  ]
}
